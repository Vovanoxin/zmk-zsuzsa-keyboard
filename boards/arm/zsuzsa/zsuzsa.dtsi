/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include <dt-bindings/zmk/matrix_transform.h>
#include "zsuzsa-layouts.dtsi"

&physical_layout0 {
    transform = <&matrix_transform0>;
};

/ {
    model = "Zsuzsa";
    compatible = "zsuzsa";

    chosen {
        zephyr,code-partition = &code_partition;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zmk,physical-layout = &physical_layout0;
        zmk,kscan = &kscan0;
        //zmk,display = &epd; // uncomment this for display
        //zephyr,console = &cdc_acm_uart;
    };

    matrix_transform0: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <16>;
        rows = <4>;
// | MX23 | MX20 | MX17 | MX13 | MX9  | MX5 |                           | MX5 | MX9  | MX13 | MX17 | MX20 | MX23 |
// | MX24 | MX21 | MX18 | MX14 | MX10 | MX6 |                           | MX6 | MX10 | MX14 | MX18 | MX21 | MX24 |
// | MX25 | MX22 | MX19 | MX15 | MX11 | MX7 | MX3 | MX1 |   | MX1 | MX3 | MX7 | MX11 | MX15 | MX19 | MX22 | MX25 |
//                      | MX16 | MX12 | MX8 | MX4 | MX2 |   | MX2 | MX4 | MX8 | MX12 | MX16 |
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)                                 RC(0,10) RC(0,11) RC(0,12) RC(0,13) RC(0,14) RC(0,15)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)                                 RC(1,10) RC(1,11) RC(1,12) RC(1,13) RC(1,14) RC(1,15)
RC(3,0) RC(3,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11) RC(2,12) RC(2,13) RC(3,14) RC(3,15)
                        RC(3,3) RC(3,4) RC(3,5) RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11) RC(3,12)
        >;
    };
};

&adc {
    status = "okay";
};

&gpiote {
    status = "okay";
};

&gpio0 {
    status = "okay";
};

&gpio1 {
    status = "okay";
};

